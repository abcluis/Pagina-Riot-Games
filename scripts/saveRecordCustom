var rp = require('request-promise');

module.exports = saveRecord;
function saveRecord(id,Model,url,paramId){
    var model;

    var options = {
        url: url,
        json : true
    };
    return rp(options)
        .then(function (data) {
            model = new Model(data);
            model[paramId] = id;
            return model.save();
        })
        .then(function () {
            return model;
        })
        .catch(function (error) {
            return error;
        });
}